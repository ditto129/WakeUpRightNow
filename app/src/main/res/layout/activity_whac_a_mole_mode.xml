<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/test_btn1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/hamster"
                android:layout_margin="10dp"
                />

            <ImageButton
                android:id="@+id/test_btn2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/hamster"
                android:layout_margin="10dp"
                />

            <ImageButton
                android:id="@+id/test_btn3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/hamster"
                android:layout_margin="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/test_btn4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/hamster"
                android:layout_margin="10dp"
                />

            <ImageButton
                android:id="@+id/test_btn5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/hamster"
                android:layout_margin="10dp"
                />

            <ImageButton
                android:id="@+id/test_btn6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/hamster"
                android:layout_margin="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/test_btn7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/hamster"
                android:layout_margin="10dp"
                />

            <ImageButton
                android:id="@+id/test_btn8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/hamster"
                android:layout_margin="10dp"
                />

            <ImageButton
                android:id="@+id/test_btn9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/hamster"
                android:layout_margin="10dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:gravity="center"
            />



    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>